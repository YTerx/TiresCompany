<Window x:Class="TiresCompany.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TiresCompany"
        mc:Ignorable="d"
        MaxHeight="600" MaxWidth="800" MinHeight="400" MinWidth="400"
        Icon="Assets\Images\logo_auto.png"
        Title="Шиномонтаж 'Авто-драйв'" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Image Source="Assets\Images\logo_auto.png" Width="70" Height="70" HorizontalAlignment="Left"></Image>
        </StackPanel>
        <Frame Grid.Row="1" x:Name="MainFrame"/>
    </Grid>
</Window>
